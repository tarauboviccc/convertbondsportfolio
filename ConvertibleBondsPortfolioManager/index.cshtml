@page
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Convertible Bonds Portfolio Manager</title>
    <link rel="stylesheet" href="styles.css">
    <script src="app.js"></script>
</head>
<body>
    <header>
        <h1>Convertible Bonds Portfolio Manager</h1>
    </header>

    <main>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Portfolio</a></li>
                <li><a href="#">Transactions</a></li>
                <li><a href="#">Reports</a></li>
            </ul>
        </nav>

        <section>
            <h2>Portfolio Summary</h2>
            <p>Total Value: $0</p>
            <p>Number of Holdings: 0</p>
            <p>Performance: 0%</p>
        </section>

        <section>
            <h2>Holdings</h2>
            <table>
                <thead>
                    <tr>
                        <th>Bond Name</th>
                        <th>Quantity</th>
                        <th>Current Price</th>
                        <th>Conversion Ratio</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Add rows for each holding dynamically using JavaScript -->
                </tbody>
            </table>
        </section>

        <section>
            <h2>Transactions</h2>
            <form>
                <label for="bondName">Bond Name</label>
                <input type="text" id="bondName" name="bondName">

                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity">

                <label for="price">Price</label>
                <input type="number" id="price" name="price">

                <label for="transactionType">Transaction Type</label>
                <select id="transactionType" name="transactionType">
                    <option value="buy">Buy</option>
                    <option value="sell">Sell</option>
                </select>

                <button type="submit">Submit</button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 Convertible Bonds Portfolio Manager</p>
    </footer>

    <script src="app.js"></script>
</body>
</html>
